{
	"compilerOptions": {
		"outDir": "distributable",
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["source"]
}
